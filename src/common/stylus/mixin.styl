
//为元素添加1css像素的边框
border-1px($color)
  position relative
  &::before
    position absolute
    bottom 0
    content ''
    width 100%
    height 1px
    background $color

//背景小图 或者大图动态获取
bg-image($url)
  background-image :url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    background-image :url($url + "@3x.png")

clearfix()
  *zoom 1
  &::after
    content ""
    display block
    clear both

//预售抢购ul flex
qgFlexlist()
  width 100%
  margin-bottom (10/$rem)
  .hdbg
    position relative
    width 100%
    height (80/$rem)
    img
      width 100%
      height 100%
    span
      position absolute
      top 0
      left (26/$rem)
      line-height  (80/$rem)
      font-size (38/$rem)
      font-weight bold
  ul
    width 100%
    clearfix()
    li
      float left
      width 4rem
      a
        display block
        width 100%
        img
          width 100%

      .heiti
        text-align center
        font-size (20/$rem)
        color #999
      .red
        font-size (25/$rem)
        color red
      .hua
        text-decoration line-through
